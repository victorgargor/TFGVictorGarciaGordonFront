@page "/access-denied"
@inject NavigationManager Navegador

<PageTitle>Acceso denegado</PageTitle>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f7fa;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2.5rem 2rem;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        color: #d9534f;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    p {
        margin-top: 16px;
        font-style: italic;
        color: #d9534f;
    }

    button.btn-primary {
        background: linear-gradient(135deg, #5b9bd5 0%, #4a7bb7 100%);
        border: none;
        border-radius: 6px;
        padding: 0.65rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        color: #fff;
        transition: background 0.3s, transform 0.1s;
    }

        button.btn-primary:hover {
            background: linear-gradient(135deg, #4a7bb7 0%, #5b9bd5 100%);
        }

        button.btn-primary:active {
            transform: scale(0.98);
        }
</style>

<div class="container mt-5 text-center">
    <h2 class="text-danger">Acceso denegado</h2>
    <p>Usted no tiene los permisos necesarios para ver esta página</p>
    <button class="btn btn-primary" @onclick="IrAlInicio">Ok</button>
</div>

@code {
    private void IrAlInicio()
    {
        Navegador.NavigateTo("/");
    }
}
